@model JuliePro.Models.RecordViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Record.Id" />
            <div class="form-group">
                <label asp-for="@Model.Record.Date" class="control-label"></label>
                <input asp-for="@Model.Record.Date" class="form-control" />
                <span asp-validation-for="@Model.Record.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Record.Discipline_Id" class="control-label"></label>
                <select asp-for="@Model.Record.Discipline_Id" class="form-control" asp-items="Model.Displicines"></select>
                <span asp-validation-for="@Model.Record.Discipline_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Record.Amount" class="control-label"></label>
                <input asp-for="@Model.Record.Amount" class="form-control" />
                <span asp-validation-for="@Model.Record.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Record.Unit" class="control-label"></label>
                <input asp-for="@Model.Record.Unit" class="form-control" />
                <span asp-validation-for="@Model.Record.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Record.Trainer_Id" class="control-label"></label>
                <select asp-for="@Model.Record.Trainer_Id" class="form-control" asp-items="Model.Trainers"></select>
                <span asp-validation-for="@Model.Record.Trainer_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
