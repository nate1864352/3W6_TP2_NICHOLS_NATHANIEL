<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JuliePro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JuliePro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="~/js/site.js" charset="utf-8"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-image: url('/images/banner.jpg'); background-size:cover; background-position:center; ">
            <div class="container-fluid" style="align-items: baseline;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><object data="~/images/haltere.svg" type="image/svg+xml" ></object></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Locals["Home"]</a>
                        </li>
            <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @Locals["Manage"] ▼
          </a>
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
            <li><a class="dropdown-item" asp-action="Index" asp-controller="Certification">@Locals["Certification"]</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-controller="Discipline">@Locals["Discipline"]</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-controller="Record">@Locals["Record"]</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-controller="TrainerCertification">@Locals["TrainerCertification"]</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-controller="Trainer">@Locals["Trainer"]</a></li>
           </ul>
        </li>
                    </ul>
                     <div class="text-right">
                        @* TODO : Mettre le commutateur de langue *@


                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white" style="position:fixed;bottom:0;">
        <div class="container">
            &copy; 2022 - JuliePro
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
